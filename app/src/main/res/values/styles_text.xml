<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorWhite</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">#8D919A</item>
        <item name="android:textColorHint">#8D919A</item>
    </style>

    <style name="BaseEditTextCard" parent="Widget.MaterialComponents.CardView">>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="cursorColor">#2d3035</item>
        <item name="android:textColor">#2d3035</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="BaseEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">@dimen/dimen_20dp</item>
        <item name="android:paddingEnd">@dimen/dimen_20dp</item>
        <item name="cursorColor">#2d3035</item>
        <item name="android:textColor">#2d3035</item>
        <item name="android:background">@drawable/selector_border</item>
    </style>

    <style name="BaseEditTextDate">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorWarmGrey</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:padding">@dimen/dimen_12dp</item>
    </style>

    <style name="BaseTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="BaseTextView.Bold" parent="BaseTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseTextView.Small" parent="BaseTextView">
        <item name="android:textSize">@dimen/dimen_text_12sp</item>
    </style>

    <style name="BaseCardEditText" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="strokeColor">@color/colorTransparent</item>
        <item name="cardCornerRadius">@dimen/dimen_4dp</item>
    </style>

</resources>